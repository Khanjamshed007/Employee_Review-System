<%if(locals.user){%>
<div class="d-flex flex-column flex-md-row justify-content-around p-2">
  <div class="container mt-4 col-md-4">
    <h4 class="text-center">Employee Details</h4>

    <form
      action="/update-employee/<%=employee._id%>"
      class="row g-3 mt-1 border rounded p-2 shadow mt-4"
      method="POST"
    >
      <!-- name input -->
      <div class="form-outline">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          value="<%=employee.name%>"
          required
        />
      </div>
      <!-- email input -->
      <div class="form-outline">
        <label for="name" class="form-label">Name</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          value="<%=employee.email%>"
          required
        />
      </div>
      <div>
        <span class="fw-semibold">Current Role:<%=employee.role%></span>
      </div>
      <!-- role input -->
      <div class="form-outline mb-2">
        <label for="role" class="form-label">Select Role</label>
        <select
          name="role"
          id="role"
          class="form-select"
          aria-label="Default select example"
          required
        >
          <option selected value="employee">Employee</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

  <!-- Review section -->
  <div class="container mt-4 col-md-4">
    <h4 class="text-center">Feedback from other users</h4>

    <%for(review of reviewsFromOthers){%>
    <div>
      <form
        action="/review/update-review/<%=review._id%>"
        method="POST"
        class="rounded p-3 mt-4 border shadow"
      >
        <div class="form-outline mb-2">
          <label for="recipient" class="form-label">From</label>
          <input
            type="text"
            id="recipient"
            class="form-control"
            value="<%review.reviewer.name%>"
            readonly
          />
        </div>

        <div>
          <label for="feedback" class="form-label">Feedback</label>
          <textarea
            name="feedback"
            id="feedback-form"
            rows="3"
            class="form-control"
          >
<%=review.review%></textarea
          >
        </div>

        <div class="d-flex justify-content-end">
          <button class="btn btn-primary mt-2" type="submit">Update</button>
        </div>
      </form>
      <%}%>
    </div>
  </div>
</div>
<%}%>
